{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "../..",
    "outDir": "dist",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@hermes/domain": ["../../packages/domain/src"],
      "@hermes/rules": ["../../packages/rules/src"]
    },
    "allowJs": false,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "../../packages/domain/src",
    "../../packages/rules/src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
